# Coordinator service (untrusted, optional)

COORDINATOR_HOST=127.0.0.1
COORDINATOR_PORT=8788
COORDINATOR_CHAIN_ADAPTER=mock

# When COORDINATOR_CHAIN_ADAPTER=comet:
COORDINATOR_COMET_RPC_URL=http://127.0.0.1:26657
# Optional override (defaults to rpc url's /websocket):
COORDINATOR_COMET_WS_URL=

# When COORDINATOR_CHAIN_ADAPTER=cosmos:
# Tendermint RPC (CometBFT)
COORDINATOR_COSMOS_RPC_URL=http://127.0.0.1:26657
# Optional override (defaults to rpc url's /websocket):
COORDINATOR_COSMOS_WS_URL=
# Cosmos API / LCD (grpc-gateway)
COORDINATOR_COSMOS_LCD_URL=http://127.0.0.1:1317

# Comma-separated list of allowed web origins for CORS.
# Omit in production to allow none by default; use "*" to allow all.
CORS_ORIGINS=*

# Enable dev-only endpoints under /_dev (default: true when NODE_ENV != "production")
COORDINATOR_DEV_ROUTES=true

# Artifact relay cache limits
COORDINATOR_ARTIFACT_MAX_BYTES=1000000
COORDINATOR_ARTIFACT_CACHE_MAX_BYTES=10000000

# Seating intent TTL (seconds)
COORDINATOR_SEAT_INTENT_TTL_SECS=300

# Authentication for write endpoints.
COORDINATOR_REQUIRE_WRITE_AUTH=false
COORDINATOR_WRITE_TOKEN=

# Write-endpoint rate limits.
COORDINATOR_WRITE_RATE_LIMIT_ENABLED=false
COORDINATOR_WRITE_RATE_LIMIT_MAX=30
COORDINATOR_WRITE_RATE_LIMIT_WINDOW_SECS=60

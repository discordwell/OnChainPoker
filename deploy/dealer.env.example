# Copy to /opt/ocp/config/dealer-<index>.env for each validator daemon.
# Example:
#   /opt/ocp/config/dealer-0.env
#   /opt/ocp/config/dealer-1.env
#   /opt/ocp/config/dealer-2.env

NODE_ENV=production

# Required: validator operator address (valoper).
DEALER_VALIDATOR_ADDRESS=ocpvaloper1replace-this

# Required: choose exactly one signer credential.
DEALER_VALIDATOR_MNEMONIC=replace-with-mnemonic
# DEALER_VALIDATOR_PRIVKEY_HEX=replace-with-64-hex-chars

DEALER_COSMOS_RPC_URL=http://127.0.0.1:26657
DEALER_COSMOS_LCD_URL=http://127.0.0.1:1317
DEALER_BECH32_PREFIX=ocp
DEALER_GAS_PRICE=0uocp

# Required in production (16+ chars recommended).
DEALER_STATE_PASSPHRASE=replace-with-long-random-passphrase
DEALER_STATE_DIR=/opt/ocp/state/dealer-0

# Defaults shown explicitly for clarity.
DEALER_AUTO_BEGIN_EPOCH=true
DEALER_AUTO_INIT_HAND=true
DEALER_AUTO_FINALIZE=true
DEALER_POLL_INTERVAL_MS=2000
DEALER_COMMITTEE_SIZE=3
DEALER_THRESHOLD=3
DEALER_SHUFFLE_ROUNDS=26

# OCP Bot Configuration
# Copy to /opt/ocp/config/bot-<N>.env and fill in values.

# Required: which table to play at
BOT_TABLE_ID=1

# Required: one of these must be set
BOT_MNEMONIC=
# BOT_PRIVKEY_HEX=

# Strategy: calling-station, tag, or lag
BOT_STRATEGY=tag

# Optional: specific seat (omit to auto-pick)
# BOT_SEAT=0

# Optional: buy-in amount (omit for table minimum)
# BOT_BUY_IN=1000000

# Chain connection
BOT_COSMOS_RPC_URL=http://127.0.0.1:26657
BOT_COSMOS_LCD_URL=http://127.0.0.1:1317
BOT_BECH32_PREFIX=ocp
BOT_GAS_PRICE=0uocp

# Behavior
BOT_POLL_INTERVAL_MS=1000
BOT_AUTO_SIT=true
BOT_AUTO_START_HAND=true
BOT_AUTO_REBUY=true
BOT_REBUY_DELAY_MS=5000
BOT_NAME=bot-0

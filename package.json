{
  "name": "onchainpoker",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "OCP_CHAIN_PROFILE=devnet bash apps/chain/scripts/localnet.sh",
    "web:dev": "pnpm -C apps/web dev",
    "web:build": "pnpm -C apps/web build",
    "web:preview": "pnpm -C apps/web preview",
    "web:test": "pnpm -C apps/web test",
    "localnet": "OCP_CHAIN_PROFILE=devnet bash apps/chain/scripts/localnet.sh",
    "cosmos:localnet": "bash apps/cosmos/scripts/localnet.sh",
    "cosmos:multinet": "bash apps/cosmos/scripts/multinet.sh",
    "cosmos:faucet": "bash apps/cosmos/scripts/faucet.sh",
    "cosmos:dealer:e2e": "bash scripts/cosmos-dealer-e2e.sh",
    "runtime:check": "bash scripts/check-runtime-target.sh",
    "test:unit": "pnpm runtime:check && pnpm -C packages/poker-engine test && pnpm -C packages/holdem-eval test && pnpm -C packages/ocp-crypto test && pnpm -C packages/dkg test && pnpm -C packages/ocp-shuffle test && pnpm -C packages/ocp-sdk test && node --test scripts/test/*.test.mjs && pnpm -C apps/sim test && pnpm -C apps/coordinator test && pnpm web:test && pnpm web:build && pnpm chain:test",
    "test": "pnpm test:unit",
    "chain:test": "cd apps/chain && go test ./...",
    "sdk:build": "pnpm -C packages/ocp-sdk build",
    "sdk:test": "pnpm -C packages/ocp-sdk test",
    "ws1:build": "pnpm -C packages/poker-engine build",
    "ws1:test": "pnpm -C packages/poker-engine test",
    "ws4:test": "pnpm -C packages/dkg test",
    "ws4:sim": "pnpm -C packages/dkg sim",
    "ws5:test": "pnpm -C packages/ocp-shuffle test",
    "ws5:bench": "pnpm -C packages/ocp-shuffle bench",
    "ws7:play_hand": "pnpm sdk:build && node scripts/play_hand.mjs",
    "ws7:play_hand_dealer": "pnpm -C packages/ocp-crypto build && pnpm -C packages/ocp-shuffle build && pnpm sdk:build && node scripts/play_hand_dealer.mjs",
    "ws7:play_hand_cosmos": "pnpm -C packages/ocp-crypto build && pnpm sdk:build && node scripts/play_hand_cosmos.mjs",
    "ws9:test": "pnpm -C apps/sim test",
    "ws9:sim": "pnpm -C apps/sim sim",
    "coordinator:dev": "node scripts/coordinator.mjs dev",
    "coordinator:build": "node scripts/coordinator.mjs build",
    "coordinator:start": "node scripts/coordinator.mjs start",
    "coordinator:test": "node scripts/coordinator.mjs test"
  }
}
